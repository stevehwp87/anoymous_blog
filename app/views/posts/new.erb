<h1>Create your new blog :) </h1>


<% if @post %>
  <% @post.errors.full_messages.each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<form action="/posts" method="POST">

  <label>Title:</label>
  <br><br>
   <input type="text" name="post[title]" >
  <br><br>
  <label>Paragraph:</label>
  <br><br>
   <textarea name="post[body]" rows="20" cols="50"><%= @post.body %></textarea>
  <br><br>
  <p>Please key in the tag name</p>
  Tag1: <input type="text" name="tag[name1]" >
  Tag2: <input type="text" name="tag[name2]" >
  Tag3: <input type="text" name="tag[name3]" >
  <br><br>
  <input type="submit">

</form>